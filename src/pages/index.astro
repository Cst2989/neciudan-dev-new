---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Neciu Dan: Tech Lead & Co-Founder @CareerOS Technical Writer | Speaker | Vlogger',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    callToAction={{
      text: 'Subscribe  ',
      href: '#subscribe',
    }}
    callToAction2={{ text: 'Learn more', href: '/about' }}
    image={{ src: '~/assets/images/profile.png', alt: 'Neciu Dan speaking at Voxxed Days Athens' }}
  >
    <Fragment slot="title">
      Tech Co-Founder @CareerOS Tech Writer | Speaker | Vlogger
    </Fragment>

    <Fragment slot="subtitle">
      Neciu Dan is a software engineer with a predominant focus on the front-end. He shares a passionate
      relationship with JavaScript and has professional experience with all of the Big Three Frameworks. <br> <br> Among them,
      he has a special fondness for React, despite his company's preference for Vue in many projects.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />


  

  <BlogLatestPosts
    title="Discover more articles"
  />

  
  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Articles', amount: '12' },
      { title: 'Videos', amount: '14' },
      { title: 'Talks', amount: '16' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    callToAction={{
      text: 'Subscribe',
      href: 'https://mailchi.mp/3b72b47614e8/subscribe',
    }}
  >
    <Fragment slot="title">
      Everyting Frontend Related
    </Fragment>

    <Fragment slot="subtitle">
      Learn the keys to success in web development, from accessibility to performance, and how to craft a secure software
    </Fragment>
  </CallToAction>
</Layout>
