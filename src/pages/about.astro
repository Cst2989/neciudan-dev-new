<style>
  .about-container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
  }
  .about-icon {
    display: inline-block;
    width: 25px;
    height: 25px;
    vertical-align: middle;
    fill: red;
    overflow: hidden;
  }
  .title {
    font-size: 2em;
    margin: 0.25em 0 0;
    margin-top: -200px;
    max-width: 800px;
    background: rgba(255, 255, 255, 0.4);
    padding: 12px;
    border-radius: 8px;
    position: absolute;
    left: 392px;
  }
  .stick {
    position: sticky;
    top: 80px;
  }
  h2.sub-title {
    color: var(--link);
  }
  hr {
    border-top: 1px solid #ddd;
    margin: 1rem 0;
  }
  .article-body {
    display: grid;
    grid-template-columns: 800px 1fr;
    column-gap: 100px;
    max-width: 1200px;
    margin: 0 auto;
  }
  
  .article-head {
    margin-bottom: 64px;
  }
  .article-head__image {
    width: 100%;
    height: 400px;
    overflow: hidden;
  }
  .article-head__image img {
    width: 100%;
    height: auto;
    margin-top: -900px;
    position: relative;
  }
  .sub-title::after {
    display: none;
  }
  aside h2 {
    margin-top: 0;
  }

  .c-s-timeline__icon svg {
    width: 24px;
    height: 24px;
    fill: var(--main-color);
  }

  .about-tags,
  .about-topics {
    display: flex;
    column-gap: 8px;
    flex-wrap: wrap;
    row-gap: 8px;
    justify-content: flex-start;
    padding-left: 0px;
  }

  .about-tags__tag,
  .about-topics__item {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 10px;
    border-radius: 18px;
    font-size: 13px;
    color: #fff;
    background-color: #2d2c2c;
  }
  .about-tags__tag p {
    margin-top: 3px;
    margin-bottom: 0px;
    font-size: 13px;
    color: #fff;
  }
  .c-s-timeline__item {
    display: flex;
    margin-bottom: 32px;
    justify-content: flex-start;
    align-items: flex-start;
    column-gap: 8px;
  }
  .c-s-event__title {
    margin-top: 0px;
    font-weight: bold;;
    margin-bottom: 0px;
  }

  .c-s-event__tag {
    padding: 10px;
    border-radius: 18px;
    font-size: 13px;
    color: var(--main-color);
    background-color: #2d2c2c;
    margin-left: 20px;
    top: -5px;
    position: relative;
  }
  .c-s-timeline__indicator {
    margin-top: 7px;
  }

  .about-body .profile-image {
    width: 360px;
    height: 360px;
    border-radius: 50%;
    overflow: hidden;
    margin: 0 auto;
    margin-bottom: 16px;
    margin-top: -300px;;
  }
  .about-body .profile-image img {
    width: 100%;
    height: auto;
  }
  .about-tags {
    display: flex;
    justify-content: flex-start;
    column-gap: 8px;
  }
  .social-icons {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    padding-left: 120px;
    row-gap: 8px;
  }
  .social-icons a {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    column-gap: 8px;
  }
  .social-icons a:hover {
    text-decoration: underline;
  }
  .about-title {
    margin-top: 32px;
    margin-bottom: 48px;
    color: var(--main-color);
  }
  .c-s-event__meta {
    margin-right: 8px;
    color: var(--aw-color-text-muted);
  }
  p {
    margin-bottom: 20px;;
  }
  .about-body {
    display: flex;
    justify-content: flex-start;
    column-gap: 32px;
    max-width: 1200px;
    margin: 0 auto;
    margin-top: 24px;
  }
  @media (max-width: 720px) {
    .about-body {
      flex-direction: column;
      margin-top: 0px;
    }
    .social-icons {
      padding-left: 10px;
      flex-direction: row;
      flex-wrap: wrap;
      column-gap: 8px;
    }
    .about-body .profile-image {
      border-radius: 0;
      width: 100%;
    }
    article {
      padding: 10px;
    }
  }
</style>
